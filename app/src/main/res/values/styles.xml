<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#80000000</item>         <!-- Color de los botones, desplaze, en materail color de bordes de componentes y letras de botonrs -->
        <item name="colorPrimaryDark">#E0000000</item>     <!-- Color de la barra de herramientas. -->
        <item name="colorAccent">#80CEEB</item>                <!-- Color del Cursor. -->
        <item name="buttonStyle">@color/colorPrimary</item>

    </style>

    <style name="SplashScreen" parent="AppTheme">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="AppSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textSize">20sp</item>
        <item name="android:textColorPrimary">#80ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
        <item name="android:tint">#80000000</item>
        <item name="android:textColorHighlight">#ffffff</item>
    </style>

    <style name="MyTheme" parent="AppTheme">
        <item name="colorPrimary">@color/coloNaranja</item>
        <item name="colorPrimaryDark">@android:color/white</item>
        <item name="colorAccent">#80CEEB</item>
        <item name="buttonStyle">@color/colorPrimary</item>
    </style>
    <style name="myDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowNoTitle">true</item>
    </style>

</resources>


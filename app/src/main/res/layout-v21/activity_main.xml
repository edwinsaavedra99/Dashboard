<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1B1717"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:background="#F57F17"
            android:paddingLeft="15dp"
            android:paddingTop="20dp"
            android:paddingRight="15dp"
            android:paddingBottom="15dp">

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work Area"
                android:textColor="#FFFFFF"
                android:textSize="22sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtTitle"
                android:layout_marginTop="6dp"
                android:text="X-RAYS"
                android:textColor="#FFFFFF"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/perfil"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="261dp"
                android:layout_marginLeft="261dp"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp" />

            <ImageView
                android:id="@+id/menu"
                android:layout_width="32dp"
                android:layout_height="52dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/menu_vertical_24px" />

        </RelativeLayout>

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alignmentMode="alignMargins"
            android:layout_marginBottom="20dp"
            android:columnCount="3"
            android:columnOrderPreserved="false"
            android:rowCount="1">

            <LinearLayout
                android:id="@+id/menu_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="12dp"
                android:background="#1B1717"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Load"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="10dp"
                    android:src="@drawable/loading_50px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Insert"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/addCircle"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/circled_thin_32px" />

                <ImageView
                    android:id="@+id/addRectangle"
                    android:layout_width="22dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/rectangular_26px" />

                <ImageView
                    android:id="@+id/addLine"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/line_32px" />

                <ImageView
                    android:id="@+id/addEllipse"
                    android:layout_width="25dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/oval_32px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Delete"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
                <ImageView
                    android:id="@+id/deleteFigures"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/delete_bin_64px" />

                <ImageView
                    android:id="@+id/changeColor"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/color_wheel_48px" />
            </LinearLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="#1B1717"
                app:cardCornerRadius="6dp"
                app:cardElevation="6dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/frame"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:background="@drawable/rx_image_1"
                        android:id="@+id/layoutImageRx"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent">

                    </LinearLayout>


                </androidx.constraintlayout.widget.ConstraintLayout>



            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:id="@+id/menu_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:layout_marginTop="12dp"
                android:background="#1B1717"
                android:gravity="center"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Save"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/save_50px" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Segm"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/segmentation"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/polyline_80px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Detect"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/detective_64px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Zoom"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <ImageView
                    android:id="@+id/extendsImage"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/zoom_to_extents_50px" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="Inspect"
                    android:textColor="#FFFFFF"
                    android:textSize="11sp" />

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginBottom="15dp"
                    android:src="@drawable/detective_hat_50px" />



            </LinearLayout>


        </GridLayout>

    </LinearLayout>


</RelativeLayout>
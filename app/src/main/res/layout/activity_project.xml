<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D0000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dashboard.Activity.ProjectActivity">
    <LinearLayout
        android:background="#40000000"
        android:gravity="left"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:paddingLeft="20dp"
        android:orientation="horizontal"
        android:id="@+id/menuProject"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:background="@android:color/transparent"
            android:id="@+id/testButton"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_arrow_back_black_24dp"/>

        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/titleProject"
            android:textColor="@android:color/white"
            style="@style/MaterialAlertDialog.MaterialComponents.Title.Text"
            android:text="PROJECT"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </TextView>

    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:layout_marginBottom="65dp"
        android:id="@+id/recicler_project"
        android:layout_width="match_parent"
        android:layout_below="@id/menuProject"
        android:layout_height="match_parent" />



    <androidx.cardview.widget.CardView
        android:layout_margin="20dp"
        app:cardMaxElevation="5dp"
        app:cardBackgroundColor="#D0000000"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/addCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/addProject"
            android:src="@drawable/ic_add_circle_outline_black_24dp"
            android:layout_width="75dp"
            android:layout_height="75dp">

        </ImageView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>

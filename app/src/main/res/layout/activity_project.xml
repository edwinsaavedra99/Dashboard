<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#D0000000"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dashboard.Activity.ProjectActivity">
    <RelativeLayout
        android:id="@+id/menuProject"
        android:gravity="center"
        android:background="#40000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_margin="10dp"
            app:cardMaxElevation="5dp"
            app:cardCornerRadius="8dp"
            android:id="@+id/cardTwoSearchStudy"
            app:cardBackgroundColor="#D0000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <SearchView
                android:queryHint="Search"
                android:id="@+id/searchProject"
                android:theme="@style/AppSearchView"
                android:layout_width="wrap_content"
                android:layout_height="35dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardUsuario"
            android:layout_alignParentRight="true"
            android:layout_margin="10dp"
            app:cardMaxElevation="5dp"
            android:layout_centerVertical="true"
            app:cardCornerRadius="18dp"
            app:cardBackgroundColor="#D0000000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/usuarioApp"
                android:src="@drawable/ic_account_circle_black_24dp"
                android:layout_width="35dp"
                android:layout_height="35dp">
            </ImageView>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/textApp"
            android:textSize="15sp"
            android:textColor="@android:color/white"
            android:text="AFD PROJECT'S"
            android:textStyle="normal"
            android:typeface="monospace"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:paddingLeft="15dp"
        android:paddingTop="10dp"
        android:paddingRight="15dp"
        android:id="@+id/recicler_project"
        android:layout_width="match_parent"
        android:layout_below="@id/menuProject"
        android:layout_height="match_parent" />

    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="@android:color/black"
        android:layout_margin="40dp"
        app:cardMaxElevation="10dp"
        app:cardPreventCornerOverlap="true"
        app:cardCornerRadius="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:id="@+id/addCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/addProject"
            android:padding="10dp"
            android:src="@drawable/ic_add_black_24dp"
            android:layout_width="60dp"
            android:layout_height="60dp">

        </ImageView>
    </androidx.cardview.widget.CardView>

</RelativeLayout>

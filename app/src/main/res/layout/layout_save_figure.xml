<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardElevation="10dp">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:hint="Nombre del Proyecto"
            app:endIconMode="clear_text"
            app:endIconTint="@color/coloApp"
            app:startIconDrawable="@drawable/ic_folder_black_24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_nameProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="12dp"
            android:hint="DescripciÃ³n del Producto"
            app:endIconMode="clear_text"
            app:endIconTint="@color/coloApp"
            app:startIconDrawable="@drawable/ic_insert_drive_file_black_24dp">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_descriptionProject"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:text="" />
        </com.google.android.material.textfield.TextInputLayout>
        <RadioGroup
            android:layout_marginTop="5dp"
            android:layout_marginBottom="12dp"
            android:layout_marginLeft="20dp"
            android:paddingLeft="13dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/fondo_white"
            android:tag="sex"
            android:orientation="horizontal"
            android:id="@+id/methodSave"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
            <RadioButton
                android:layout_gravity="left"
                android:layout_marginRight="25dp"
                android:textSize="16sp"
                android:checked="true"
                android:buttonTint="#E0000000"
                android:id="@+id/radioInternet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Internet" />
            <RadioButton
                android:textSize="16sp"
                android:buttonTint="#E0000000"
                android:id="@+id/radioLocal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="En Dispositivo" />
        </RadioGroup>
    </LinearLayout>
</androidx.cardview.widget.CardView>
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Open"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp"
                                android:visibility="gone" />

                            <ImageView
                                android:id="@+id/load"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="10dp"
                                android:src="@drawable/ic_open_in_new_black_24dp"
                                android:visibility="gone" />

                            <TextView
                                android:id="@+id/textSave"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Save"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/saveFigures"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/save_50px" />

                            <ImageView
                                android:id="@+id/sendData"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/ic_send_black_24dp"
                                android:visibility="gone" />

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/fondo"
                                android:gravity="center"
                                android:orientation="vertical">


                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="10dp"
                                    android:layout_marginBottom="10dp"
                                    android:text="Insert"
                                    android:textColor="#FFFFFF"
                                    android:textSize="10sp" />

                                <ImageView
                                    android:id="@+id/addPoint"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_marginBottom="15dp"
                                    android:src="@drawable/filled_circle_16px" />

                                <ImageView
                                    android:id="@+id/addLine"
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="15dp"
                                    android:src="@drawable/line_32px" />

                                <ImageView
                                    android:id="@+id/addCircle"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="15dp"
                                    android:src="@drawable/circled_thin_32px" />

                                <ImageView
                                    android:id="@+id/addRectangle"
                                    android:layout_width="22dp"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="15dp"
                                    android:src="@drawable/rectangular_26px" />

                                <ImageView
                                    android:id="@+id/addEllipse"
                                    android:layout_width="25dp"
                                    android:layout_height="30dp"
                                    android:layout_marginBottom="10dp"
                                    android:src="@drawable/oval_32px" />
                            </LinearLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Delete"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/deleteFigures"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_marginBottom="15dp"
                                android:src="@drawable/delete_bin_64px" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:paddingBottom="15dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="10dp"
                                android:text="Color"
                                android:textColor="#FFFFFF"
                                android:textSize="10sp" />

                            <ImageView
                                android:id="@+id/changeColor"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_gravity="bottom"
                                android:src="@drawable/color_wheel_48px" />
                        </LinearLayout>
                    </RelativeLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp">

            <ImageView
                android:id="@+id/test"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/expand_26px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/getFigures"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="5dp"
            android:paddingTop="13dp"
            android:paddingRight="5dp"
            android:paddingBottom="15dp"
            android:visibility="gone">

            <ImageView
                android:id="@+id/figuresSet"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/maintenance_24px" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/backFilters"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="43dp"
            android:paddingTop="15dp"
            android:paddingRight="43dp"
            android:paddingBottom="5dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="Back"
                android:textColor="#FFFFFF"
                android:textSize="10sp" />

            <ImageView
                android:id="@+id/back_menu_right_1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/delete_16px" />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>